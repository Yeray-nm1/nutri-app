---
import LeafIcon from '@icons/leaf-icon.svg'
import Social from './Social.astro'
import '@styles/footer.css'
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <section class="footer-brand">
      <div class="footer-logo">
        <LeafIcon />
        <span>Productos de Temporada</span>
      </div>
      <p>Alimentación sostenible y saludable con productos locales de temporada en España.</p>
    </section>

    <nav class="footer-nav" aria-label="Footer Navigation">
      <section class="footer-nav-column">
        <h4>Explorar</h4>
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/tips">Consejos</a></li>
        </ul>
      </section>
      
      <section class="footer-nav-column">
        <h4>Información</h4>
        <ul>
          <li><a href="/faq">FAQ</a></li>
          <li><a href="/glosario">Glosario</a></li>
        </ul>
      </section>
      
      <section class="footer-nav-column">
        <h4>Colabora</h4>
        <ul>
          <li><a href="/contact">Contacto</a></li>
          <li><a href="/">Términos de uso</a></li>
        </ul>
      </section>
    </nav>
  </div>
  
  <div class="footer-bottom">
    <div class="footer-bottom-container">
      <small>&copy; {currentYear} Productos de Temporada. Todos los derechos reservados.</small>
      <Social /> 
    </div>
  </div>
</footer>